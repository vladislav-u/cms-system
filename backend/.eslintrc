{
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "endOfLine": "auto",
        "tabWidth": 4
      }
    ],
    "import/no-extraneous-dependencies": [
      "error", 
      { "devDependencies": true }
      ],
    "import/extensions": [
      "warn",
      { "js": "always" }
    ]
  }
}